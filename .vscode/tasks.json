{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Docs (Live Reload)",
            "type": "shell",
            "command": "make",
            "args": [
                "liveserve"
            ],
            "options": {
                "cwd": "docs"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Docs",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "docs"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}