{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Serve Docs (Live Reload)",
            "type": "shell",
            "command": "make",
            "args": [
                "liveserve"
            ],
            "options": {
                "cwd": "docs"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Docs",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "docs"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Test with Coverage",
            "type": "shell",
            "command": "conda",
            "args": [
                "run",
                "-n",
                "py311",
                "pytest",
                "--cov=src/bnl",
                "--cov-report=xml",
                "tests/"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "black",
            "args": [
                "src/",
                "tests/"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}